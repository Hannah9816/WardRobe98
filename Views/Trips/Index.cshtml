@model IEnumerable<WardRobe.Models.Trip>

@{
    ViewData["Title"] = "Trips";
}

<h2 class="text-center" style="font-family:'Freestyle Script'; font-size:50px; color:darkturquoise">Trip</h2>

<p>
    <a class="btn btn-info" asp-action="Create"> Create New </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TripName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TripName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                 <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a>
            
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ID">Edit</a>

           
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
         
            </td>
            
        </tr>
        }
    </tbody>
</table>
